FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["CodeAssistant/CodeAssistant.csproj", "CodeAssistant/"]
RUN dotnet restore "CodeAssistant/CodeAssistant.csproj"
COPY . .
WORKDIR "/src/CodeAssistant"
RUN dotnet build "CodeAssistant.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "CodeAssistant.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "CodeAssistant.dll"]