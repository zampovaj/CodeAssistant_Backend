# Base image for runtime
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy only the .csproj first to leverage layer caching
COPY ["CodeAssistant/CodeAssistant/CodeAssistant.csproj", "CodeAssistant/CodeAssistant/"]
RUN dotnet restore "CodeAssistant/CodeAssistant/CodeAssistant.csproj"

# Now copy everything else
COPY . .

# Set working directory to the project folder
WORKDIR "/src/CodeAssistant/CodeAssistant"
RUN dotnet build "CodeAssistant.csproj" -c Release -o /app/build

# Publish stage
FROM build AS publish
RUN dotnet publish "CodeAssistant.csproj" -c Release -o /app/publish --no-restore

# Final runtime image
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

ENTRYPOINT ["dotnet", "CodeAssistant.dll"]
